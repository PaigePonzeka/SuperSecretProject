= form_for(@group) do |f|
  - if @group.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group.errors.count, "error")} prohibited this group from being saved:"

      %ul
      -@group.errors.full_messages.each do |msg|
        %li= msg

  #field
    = f.label :user_id
    %br
    = f.text_field :user_id
  .field
    = f.label :name
    %br
    = f.text_field :name
  .actions
    = f.submit
