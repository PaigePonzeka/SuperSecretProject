= form_for(@place) do |f|
  - if @place.errors.any?
    #error_explanation
      %h2
        = pluralize(@place.errors.count, "error")
        prohibited this place from being saved:
      %ul
        - @place.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :street
    %br/
    = f.text_field :street
  .field
    = f.label :city
    %br/
    = f.text_field :city
  .field
    = f.label :zipcode
    %br/
    = f.text_field :zipcode
  .field
    = f.label :phone
    %br/
    = f.text_field :phone
  .field
    = f.label :yelp
    %br/
    = f.text_field :yelp
  .actions
    = f.submit
